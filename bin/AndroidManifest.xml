<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.killer.contact"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app"
        android:label="@string/contact_app"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.killer.contact.MainActivity"
            android:label="@string/contact_app" >
        </activity>
        <activity
            android:name="com.killer.contact.AddActivity"
            android:label="@string/contact_app" >
        </activity>
        <activity
            android:name="com.killer.contact.UpdateActivity"
            android:label="@string/contact_app" >
        </activity>
        <activity
            android:name="com.killer.contact.WelcomeActivity"
            android:label="@string/contact_app" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.killer.contact.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.killer.contact.BackupActivity"
            android:label="@string/title_activity_backup" >
        </activity>
        <activity android:name="com.killer.contact.RegActivity" >
        </activity>
                <activity android:name="com.killer.contact.BackupListActivity" >
        </activity>
    </application>

</manifest>